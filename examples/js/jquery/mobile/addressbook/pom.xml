<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.metawidget.examples.js</groupId>
		<artifactId>examples-js-parent</artifactId>
		<version>3.8-SNAPSHOT</version>
		<relativePath>../../../</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.metawidget.examples.js.jquerymobile</groupId>
	<artifactId>addressbook-jquerymobile</artifactId>
	<packaging>war</packaging>

	<dependencies>
		<dependency>
			<groupId>org.metawidget.modules.js</groupId>
			<artifactId>metawidget-jquerymobile</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.metawidget.examples.shared</groupId>
			<artifactId>addressbook-shared-webapp</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<overlays>
						<overlay>
							<groupId>org.metawidget.modules.js</groupId>
							<artifactId>metawidget-jquerymobile</artifactId>
						</overlay>
						<overlay>
							<groupId>org.metawidget.examples.shared</groupId>
							<artifactId>addressbook-shared-webapp</artifactId>
						</overlay>
					</overlays>
					<!-- Exclude non-minified versions -->
					<packagingExcludes>
						lib/metawidget/core/metawidget.js,
						lib/metawidget/core/metawidget-inspectionresultprocessors.js,
						lib/metawidget/core/metawidget-inspectors.js,
						lib/metawidget/core/metawidget-layouts.js,
						lib/metawidget/core/metawidget-utils.js,
						lib/metawidget/core/metawidget-widgetbuilders.js,
						lib/metawidget/core/metawidget-widgetprocessors.js,
						lib/metawidget/jquery-mobile/metawidget-jquerymobile.js,
						WEB-INF/**
					</packagingExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.github.searls</groupId>
				<artifactId>jasmine-maven-plugin</artifactId>
				<configuration>
					<customRunnerTemplate>src/test/js/index.html</customRunnerTemplate>
					<webDriverClassName>org.openqa.selenium.firefox.FirefoxDriver</webDriverClassName>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>test</goal>
						</goals>
						<phase>
							package						
						</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>