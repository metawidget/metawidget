<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.metawidget.website</groupId>
		<artifactId>website-parent</artifactId>
		<version>2.2</version>
		<relativePath>../</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<artifactId>metawidget-website</artifactId>
	<packaging>war</packaging>

	<properties>
		<maven.build.timestamp.format>dd MMM yyyy</maven.build.timestamp.format>
		<timestamp>${maven.build.timestamp}</timestamp>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>org.codehaus.groovy</groupId>
			<artifactId>groovy-all</artifactId>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules</groupId>
			<artifactId>metawidget-all</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules</groupId>
			<artifactId>metawidget-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.swing</groupId>
			<artifactId>metawidget-swing</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules</groupId>
			<artifactId>metawidget-annotation</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules</groupId>
			<artifactId>metawidget-groovy</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules</groupId>
			<artifactId>metawidget-jpa</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.hibernate</groupId>
			<artifactId>metawidget-hibernatevalidator</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-validator</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>javax.persistence</groupId>
			<artifactId>persistence-api</artifactId>
			<scope>runtime</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>ROOT</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<!-- So that XmlSchemaGeneratorTask can process GroupLayout -->
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>				
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<archiveClasses>true</archiveClasses>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<packagingExcludes>WEB-INF/**</packagingExcludes>
					<webResources>
						<resource>
							<directory>src/main/webapp</directory>
							<filtering>true</filtering>
							<includes>
								<include>**/*.php</include>
							</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-jarsigner-plugin</artifactId>
				<configuration>
					<alias>Metawidget</alias>
					<keystore>${basedir}/src/main/resources/org/metawidget/website/swing/console/metawidget.keystore</keystore>
					<storepass>m3t4w1dg3t</storepass>
					<processMainArtifact>false</processMainArtifact>
					<archiveDirectory>target/ROOT/WEB-INF/lib</archiveDirectory>
					<includes>
						<include>console-applet.jar</include>
						<include>metawidget-*.jar</include>
						<include>groovy-all.jar</include>
					</includes>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<configuration>
					<target>
					
						<!-- Documentation -->
						
						<!-- (will fail if 'javadoc:aggregate' has not been run manually) -->
						
						<copy todir="target/ROOT/doc/api">
							<fileset dir="../../modules/target/site/apidocs"/>
						</copy>

						<copy todir="target/ROOT/doc/reference">
							<fileset dir="../../documentation/reference/target/docbook">
								<exclude name="**/*.fo"/>
								<exclude name="**/admons/pdf/*.*"/>
							</fileset>
						</copy>						
						
						<copy todir="target/ROOT/doc/taglib">
							<fileset dir="../../modules/target/site/tlddoc"/>
						</copy>						

						<!-- Live demo -->
						
						<copy todir="target/ROOT/live-demo">
							<fileset dir="target/ROOT/WEB-INF/lib">
								<exclude name="ROOT.jar" />
								<exclude name="metawidget-all.jar"/>
								<exclude name="metawidget-website.jar"/>
								<exclude name="hibernate-commons*.jar"/>
								<exclude name="slf4j-api.jar"/>
							</fileset>
						</copy>
						<copy file="target/ROOT/WEB-INF/lib/metawidget-website.jar" tofile="target/ROOT/live-demo/console-applet.jar" />
						
						<!-- XML schemas -->
						
						<taskdef name="xmlSchemaGenerator" classname="org.metawidget.website.config.XmlSchemaGeneratorTask" />
						<xmlSchemaGenerator jar="target/ROOT/WEB-INF/lib/metawidget-all.jar" destdir="target/ROOT/xsd" />
						<copy file="../../modules/core/src/main/resources/org/metawidget/config/metawidget-1.0.xsd" todir="target/ROOT/xsd"/>
						<copy file="../../modules/core/src/main/resources/org/metawidget/inspector/inspection-result-1.0.xsd" todir="target/ROOT/xsd"/>
						
						<!-- Try to have something at TLD URIs -->

						<copy file="../../modules/faces/core/src/main/resources/META-INF/metawidget-faces.tld" tofile="target/ROOT/faces/index.html"/>
						<copy file="../../modules/faces/core/src/main/resources/META-INF/metawidget-faces.tld" todir="target/ROOT/faces"/>
						<copy file="../../modules/jsp/core/src/main/resources/META-INF/metawidget-html.tld" tofile="target/ROOT/html/index.html"/>
						<copy file="../../modules/jsp/core/src/main/resources/META-INF/metawidget-html.tld" todir="target/ROOT/html"/>
						<copy file="../../modules/spring/core/src/main/resources/META-INF/metawidget-spring.tld" tofile="target/ROOT/spring/index.html"/>
						<copy file="../../modules/spring/core/src/main/resources/META-INF/metawidget-spring.tld" todir="target/ROOT/spring"/>
						<copy file="../../modules/struts/core/src/main/resources/META-INF/metawidget-struts.tld" tofile="target/ROOT/struts/index.html"/>
						<copy file="../../modules/struts/core/src/main/resources/META-INF/metawidget-struts.tld" todir="target/ROOT/struts"/>
						
						<!-- Easy Android install -->
						
						<copy file="../../examples/android/addressbook/application/target/addressbook-android.apk" todir="target/ROOT/examples/android"/>
						<copy file="../../integration-tests/android/allwidgets/application/target/allwidgets-android.apk" todir="target/ROOT/integration-tests/android"/>
						
						<!-- (SourceForge runs on UNIX, and we want to keep file sizes the same for easy diffs) -->
				
						<echo message="fixcrlf"/>
						<fixcrlf srcdir="target/ROOT" eol="unix">
							<include name="**/*.css"/>
							<include name="**/*.html"/>
							<include name="**/*.js"/>
							<include name="**/*.php"/>
						</fixcrlf>
						
						<!-- Rezip -->
						
						<delete file="target/ROOT.war"/>
						<zip destfile="target/ROOT.war" basedir="target/ROOT"/>
						
					</target>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.metawidget.website</groupId>
						<artifactId>website-schema-generator</artifactId>
						<version>${project.version}</version>
					</dependency>
					<dependency>
						<groupId>org.metawidget.website</groupId>
						<artifactId>website-schema-generator-dependencies</artifactId>
						<version>${project.version}</version>
						<type>pom</type>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>