							<artifactId>dbcp</artifactId>
							<version>${tomcat.version}</version>
							<scope>runtime</scope>
						</dependency>
					</dependencies>
					<configuration>
						<fork>true</fork>
						<port>8180</port>
						<warFile>target/${project.build.finalName}.war</warFile>
