						<descriptor>src/main/assembly/examples.xml</descriptor>
						<descriptor>src/main/assembly/src.xml</descriptor>
					</descriptors>
					<finalName>metawidget-${project.version}</finalName>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>single</goal>
						</goals>
