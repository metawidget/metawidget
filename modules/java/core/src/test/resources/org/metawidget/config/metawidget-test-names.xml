<?xml version="1.0"?>
<metawidget xmlns="http://metawidget.org"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://metawidget.org http://metawidget.org/xsd/metawidget-1.0.xsd" version="1.0">

	<springMetawidgetTag xmlns="java:org.metawidget.jsp.tagext.html.spring">
		<inspector>
			<compositeInspector xmlns="java:org.metawidget.inspector.composite" config="CompositeInspectorConfig">
				<inspectors>
					<array>
						<propertyTypeInspector xmlns="java:org.metawidget.inspector.propertytype"/>
						<metawidgetAnnotationInspector xmlns="java:org.metawidget.inspector.annotation"/>
						<xmlInspector xmlns="java:org.metawidget.inspector.xml" config="XmlInspectorConfig"/>
					</array>
				</inspectors>
			</compositeInspector>
		</inspector>
		<widgetBuilder>
			<compositeWidgetBuilder xmlns="java:org.metawidget.widgetbuilder.composite" config="CompositeWidgetBuilderConfig">
				<widgetBuilders>
					<array>
						<springWidgetBuilder xmlns="java:org.metawidget.jsp.tagext.html.widgetbuilder.spring"/>
						<htmlWidgetBuilder xmlns="java:org.metawidget.jsp.tagext.html.widgetbuilder"/>
					</array>
				</widgetBuilders>
			</compositeWidgetBuilder>
		</widgetBuilder>		
		<layout>
			<headingTagLayoutDecorator xmlns="java:org.metawidget.jsp.tagext.html.layout" config="HeadingTagLayoutDecoratorConfig">
				<layout>
					<htmlTableLayout config="HtmlTableLayoutConfig">
						<tableStyleClass>
							<string>table-form</string>
						</tableStyleClass>
						<columnStyleClasses>
							<array>
								<string>table-label-column</string>
								<string>table-component-column</string>
								<string>table-required-column</string>
							</array>
						</columnStyleClasses>
						<footerStyleClass>
							<string>buttons</string>
						</footerStyleClass>				
					</htmlTableLayout>
				</layout>
				<styleClass>
					<string>section-heading</string>
				</styleClass>				
			</headingTagLayoutDecorator>
		</layout>
	</springMetawidgetTag>

	<htmlMetawidgetTag xmlns="java:org.metawidget.jsp.tagext.html">
		<inspector>		
			<compositeInspector xmlns="java:org.metawidget.inspector.composite" config="CompositeInspectorConfig">
				<inspectors>
					<array>
						<propertyTypeInspector xmlns="java:org.metawidget.inspector.propertytype"/>
						<metawidgetAnnotationInspector xmlns="java:org.metawidget.inspector.annotation"/>
						<xmlInspector xmlns="java:org.metawidget.inspector.xml" config="XmlInspectorConfig"/>
					</array>
				</inspectors>
			</compositeInspector>
		</inspector>
		<layout>
			<simpleLayout xmlns="java:org.metawidget.jsp.tagext.layout"/>
		</layout>		
	</htmlMetawidgetTag>

</metawidget>