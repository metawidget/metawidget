		<dependency>
			<groupId>org.metawidget.modules.commons</groupId>
			<artifactId>metawidget-jexl</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.commons</groupId>
			<artifactId>metawidget-commonsvalidator</artifactId>
			<version>${project.version}</version>
		</dependency>
		<!-- metawidget-faces should be implied -->
		<dependency>
			<groupId>org.metawidget.modules.faces</groupId>
			<artifactId>metawidget-facesannotation</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.faces</groupId>
			<artifactId>metawidget-icefaces</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.faces</groupId>
			<artifactId>metawidget-primefaces</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.faces</groupId>
			<artifactId>metawidget-richfaces</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.faces</groupId>
			<artifactId>metawidget-tomahawk</artifactId>
			<version>${project.version}</version>
		</dependency>
		<!-- metawidget-gwt should be implied -->
		<dependency>
			<groupId>org.metawidget.modules.gwt</groupId>
			<artifactId>metawidget-extgwt</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.hibernate</groupId>
			<artifactId>metawidget-hibernate</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.hibernate</groupId>
			<artifactId>metawidget-hibernatevalidator</artifactId>
			<version>${project.version}</version>
