		<dependency>
			<groupId>org.metawidget.modules.spring</groupId>
			<artifactId>metawidget-spring</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.struts</groupId>
			<artifactId>metawidget-strutsannotation</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.struts</groupId>
			<artifactId>metawidget-struts</artifactId>
			<version>${project.version}</version>
		</dependency>
		<!-- metawidget-swing should be implied -->
		<dependency>
			<groupId>org.metawidget.modules.swing</groupId>
			<artifactId>metawidget-appframework</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.metawidget.modules.swing</groupId>
			<artifactId>metawidget-beansbinding</artifactId>
