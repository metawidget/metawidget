			<groupId>org.metawidget.modules.jsp</groupId>
			<artifactId>metawidget-jsp</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jsp-api</artifactId>
